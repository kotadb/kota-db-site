{
  "name": "@kotadb/monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm run --filter @kotadb/web dev",
    "dev:app": "pnpm run --filter @kotadb/app dev",
    "build": "pnpm run -r build",
    "build:web": "pnpm run --filter @kotadb/web build",
    "build:app": "pnpm run --filter @kotadb/app build",
    "start:web": "pnpm run --filter @kotadb/web start",
    "start:app": "pnpm run --filter @kotadb/app start",
    "lint": "pnpm run -r lint",
    "format": "pnpm run -r format",
    "format:check": "pnpm run -r format:check",
    "typecheck": "pnpm run -r typecheck",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "prepare": "husky",
    "test": "pnpm run -r test",
    "test:watch": "pnpm run -r test:watch",
    "test:coverage": "pnpm run -r test:coverage",
    "test:ui": "pnpm run -r test:ui"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp": "6.3.0",
      "undici": "5.29.0",
      "cookie": "0.7.1",
      "esbuild": "0.25.0"
    }
  },
  "type": "module"
}
