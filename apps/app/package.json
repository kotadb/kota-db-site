{
  "name": "@kotadb/app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3001",
    "build": "next build",
    "build:cf": "npx @cloudflare/next-on-pages",
    "preview:cf": "npx wrangler pages dev .vercel/output/static --compatibility-date=2024-01-01",
    "deploy:cf": "npx wrangler pages deploy .vercel/output/static --project-name=kotadb-app",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@kotadb/shared": "workspace:*",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
