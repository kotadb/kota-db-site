    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "stripe": "^18.5.0",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.14",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
